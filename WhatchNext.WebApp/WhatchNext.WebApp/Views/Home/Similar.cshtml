@{
    ViewBag.Title = "Similar Shows";
}


    <form id="searchForm" style="background-color: aliceblue;">
        <div class="input-field">
            <input id="search" type="search" required>
            <label for="search"><i class="material-icons">search</i></label>
            @*<i class="material-icons">close</i>*@
        </div>

        <a id="searchButton" class="waves-effect waves-light btn">Stuff</a>
    </form>

    <div id="similarShows">
        <div class="partialContents" data-url="getsimilarasync">

            <div class="progress" style="visibility:hidden">
                <div class="indeterminate"></div>
                <br />
                Loading content......
            </div>

            

        </div>
    </div>

<script>
    $("#searchButton").click(function () {
        $('#searchForm').hide();
        //$('#similarShows').show();

        $(".partialContents").each(function (index, item) {
            var url = $(item).data("url");
            if (url && url.length > 0) {
                $(item).load(url);
            }
        });
    });

</script>

